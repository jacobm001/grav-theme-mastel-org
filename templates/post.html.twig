{% extends 'partials/base.html.twig' %}

{% block content %}
{{ dump(page) }}

<div class="row">
	<div class="col">
		<div class="blog-post">
		<h1>{{ page.title }}</h1>

		<p class="lead">by {{ site.author.name }}</p>

		<hr>

		<p><i class="fa fa-calendar"></i> Posted on {{ page.date|date("F d, Y") }}</p>

		{% if page.taxonomy.tag %}
		<p><i class="fa fa-tags"></i> Tags:
			{% for tag in page.taxonomy.tag %}
			<span class="badge bg-secondary">{{ tag }}</span>

			{% endfor %}
		</p>
		{% endif %}

		<p> Share:
			<span>
				<a class="fab fa-facebook color-facebook"
					href="https://www.facebook.com/sharer/sharer.php?u={{ page.url(true) }}"></a>
			</span>
			<span>
				<a class="fab fa-twitter color-twitter"
					href="https://twitter.com/intent/tweet/?text={{ page.title }}&url={{ page.url(true) }}"></a>
			</span>
			<span>
				<a class="fab fa-reddit color-reddit"
					href="http://www.reddit.com/submit/?url={{ page.url(true) }}"></a>
			</span>
		</p>

		<hr>

		{{ content }}
		</div>
	</div>
</div>
{% endblock %}
