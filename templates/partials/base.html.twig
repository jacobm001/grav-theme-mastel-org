{% set theme_config = attribute(config.themes, config.system.pages.theme) %}

<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"', 100) %}
        {% do assets.addCss('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', 99) %}
        {% do assets.addCss('theme://css/custom.css', 98) %}
        {% do assets.addCss('theme://css/blog.css', 97) %}
        {% do assets.addCss('theme://css/forms.css', 96) %}
        {% do assets.addCss('theme://css/gallery.css', 95) %}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('jquery', 100) %}
        {% do assets.addJs('theme://js/site.js', 99) %}
    {% endblock %}
    {{ assets.js() }}

{% endblock head%}
</head>

<body>

{% block body %}
        <div class="flex-col">
            <nav>
                {% include 'partials/navigation.html.twig' %}
            </nav>
        </div>

        <div class="flex-col flex-fill">
            <main>
                <div class="container">
                    {% block content %}
                    {% endblock %}
                </div>
            </main>
        </div>   
{% endblock %}

{#{% block footer %}
    <footer>
        <p class="copyright">Copyright Jacob Mastel {{ "now"|date("Y") }}</p>
    </footer>
{% endblock %} #}

{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}

</body>
</html>
