{% extends 'partials/base.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-sm-12">
        <h1 class="display-1">{{ page.title }}</h1>
    </div>
</div>

<div class="row">
    {% for recipe in recipes %}
    <div class="col-sm-12 col-md-6 col-lg-4">
        <a href="{{ config.plugins.recipebook.route_view ~ "/" ~ recipe.uuid }}">{{ recipe.name }}</a>
    </div>
    {% endfor %}
</div>

{% endblock %}
